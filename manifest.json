{

    "manifest_version": 2,
    "name": "getmeQR",
    "version": "1.0",

    "description": "getmeQR is an easy to use google chrome extension to generate QR code on the fly",
    "icons": {
        "64":"/static/logo64.png",
        "16": "/static/logo16.png"
      },

    "browser_action": {
        "default_popup": "main.html"
    },
    
    "options_page":"/static/extensionOptions.html",
    "permissions": [
        "https://api.qrserver.com/v1/create-qr-code/",
        "tabs",
        "contextMenus"
      ]
}